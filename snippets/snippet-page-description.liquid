{% if template == 'blog' %}
	<meta name="description" content="News on the most stylish accessories and latest fashion trends from LVBT" />
{% elsif template == 'article' %}
	<meta name="description" content="{{ article.excerpt_or_content | newline_to_br | strip_html | truncatewords: 50, '' | escape  }}" />
{% elsif template == 'collection' and collection.id %}
	<meta name="description" content="{{ page_description }}" />
{% elsif template == 'collection' and collection.id == blank %}
	<meta name="description" content="Unique jewellery and accessories sourced from around the world exclusively for you." />
{% else %}
	<meta name="description" content="{{ page_description }}" />
{% endif %}