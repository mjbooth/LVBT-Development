<ul class="breadcrumbs colored-links">
   <li><a href="/">Home</a></li>
   {% if template contains "product" %}
      {% if collection %}            
       <li><a href="/collections">Collections</a></li>  <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
      {% else %}
       <li><a href="/collections/all">Products</a></li>
      {% endif %}
       <li>{{ product.title }}</li>
   {% elsif template contains "list-collections" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "collection" %} 
       <li><a href="/collections">Collections</a></li>  <li>{% if current_tags %} {{ collection.title | link_to_remove_tag: current_tags.first }} {% else %} {{ collection.title }} {% endif %}</li> {% comment %}{% if current_tags %}  <li>{{ current_tags.first }}</li> {% endif %}{% endcomment %}
   {% elsif template contains "blog" %}
       <li>{{ blog.title }}</li>
      {% if current_tags.size > 0 %}
       <li>Tagged: {% for tag in current_tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}</li>
      {% endif %}
   {% elsif template contains "page" %}
       <li>{{ page.title }}</li>
   {% elsif template contains "article" %}
       <li>{{ blog.title | link_to: blog.url }}</li>
       <li>{{ article.title }}</li>
   {% elsif template contains "cart" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "404" %}
       <li>404</li>
   {% elsif template contains "search" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "customers/login" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "customers/reset_password" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "customers/activate_account" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "customers/account" %}
       <li>{{ page_title }}</li>
   {% elsif template contains "customers/addresses" %}
       <li><a href="/account">Account</a></li>  <li>{{ page_title }}</li>
   {% elsif template contains "customers/order" %}
       <li><a href="/account">Account</a></li>  <li>{{ page_title }}</li>
   {% endif %}      
</ul>